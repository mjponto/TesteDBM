@model TesteDBM.DTOs.ProdutoCreateDto

@{
    ViewData["Title"] = "Criar Produto (MVC)";
}

<h1>Criar Produto</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <!-- <span asp-validation-for="Descricao" class="text-danger"></span> se quiser -->
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
